<!DOCTYPE html>
<html lang="en" class="group/html">
<head>
{% include "head.liquid" %}
</head>
<body>
{% include "topbar.liquid" %}

<main class="container mx-auto px-4 pt-24 pb-8 max-w-6xl">
<div class="mb-12">
<div class="breadcrumbs text-sm">
<ul>
<li><a href="/" class="link link-hover">Home</a></li>
<li><a href="/blog/" class="link link-hover">Notes of Oxur</a></li>
<li>Archives</li>
</ul>
</div>
<h1 class="text-4xl font-bold mt-4 text-brand-gradient">Archives</h1>
<p class="text-base-content/70 mt-2">All posts, organized by date</p>
</div>

<!-- Posts by Year and Month -->
{% assign all_posts = paginator.pages | sort: "published_date" | reverse %}
{% assign current_year = "" %}
{% assign current_month = "" %}
{% assign year_started = false %}
{% assign month_started = false %}

{% for post in all_posts %}
{% assign post_year = post.published_date | date: "%Y" %}
{% assign post_month = post.published_date | date: "%B" %}

{% if post_year != current_year %}
{% if month_started %}</div></div>{% assign month_started = false %}{% endif %}
{% if year_started %}</section>{% endif %}

<section class="mb-12">
<h2 class="text-3xl font-bold mb-6">{{ post_year }}</h2>
{% assign current_year = post_year %}
{% assign current_month = "" %}
{% assign year_started = true %}
{% endif %}

{% if post_month != current_month %}
{% if month_started %}</div></div>{% endif %}

<div class="mb-8">
<h3 class="text-2xl font-semibold mb-4 text-primary">{{ post_month }}</h3>
<div class="space-y-4">
{% assign current_month = post_month %}
{% assign month_started = true %}
{% endif %}

{% assign include_post = post %}
{% assign include_style = "horizontal" %}
{% assign include_show_excerpt = true %}
{% include "post-card.liquid" %}
{% endfor %}

{% if month_started %}</div></div>{% endif %}
{% if year_started %}</section>{% endif %}

{% include "pagination.liquid" %}
</main>

{% include "footer.liquid" %}
{% include "theme-toggle.liquid" %}

<script src="/assets/js/main.js"></script>
</body>
</html>
